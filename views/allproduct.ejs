    <!-- Main Content -->
    <main class="flex-grow p-8">
      <header class="mb-8 flex justify-between items-center">
        <!-- Stats Grid Container -->
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4"
        >
          <!-- Total Products -->
          <div class="bg-white p-4 rounded-lg shadow flex items-center gap-4">
            <i class="fa-solid fa-box text-indigo-600 text-2xl"></i>
            <div>
              <div class="text-sm text-gray-500">Total Products</div>
              <div class="text-xl font-bold text-indigo-700">145</div>
            </div>
          </div>

          <!-- Out of Stock -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Out of Stock</div>
            <div class="text-2xl font-bold text-red-600">12</div>
          </div>

          <!-- Low Inventory -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Low Stock Items</div>
            <div class="text-2xl font-bold text-yellow-500">8</div>
          </div>

          <!-- Categories -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Categories</div>
            <div class="text-2xl font-bold text-green-600">9</div>
          </div>
        </div>
      </header>
      <section class="mt-8">
        <div class="overflow-x-auto bg-white rounded-lg shadow">
          <table class="min-w-full table-auto">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Product ID
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Image</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Price</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Stock</th>
                <th
                  class="px-6 py-3 inline-block ml-3 text-left text-sm font-semibold"
                >
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(val) { %>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4"><%= val.productId %></td>
                <td class="px-6 py-4">
                  <img
                    src="<%= val.imageUrl %>"
                    alt="<%= val.productName %>"
                    class="w-12 h-12 rounded"
                  />
                </td>
                <td class="px-6 py-4"><%= val.productName %></td>
                <td class="px-6 py-4"><%= val.category %></td>
                <td class="px-6 py-4 font-semibold">$<%= val.price %></td>
                <td class="px-6 py-4 inline-block ml-2"><%= val.stock %></td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">Edit</button>
                  <button class="text-red-600 pl-2 hover:underline">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>
    </main>
