<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <title>E-commerce Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex overflow-hidden">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg flex flex-col">
      <div class="p-6 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-indigo-600">E-Shop Admin</h1>
      </div>
      <nav class="flex flex-col p-4 space-y-3 flex-grow">
        <a
          href="/admin"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-semibold text-indigo-600 bg-indigo-50"
          >Dashboard</a
        >
        <a
          href="/product"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Products</a
        >
        <a
          href="/order"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Orders</a
        >
        <a
          href="customer"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Customers</a
        >
        <a
          href="report"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Reports</a
        >
        <a
          href="#"
          class="mt-auto py-2 px-4 rounded-lg hover:bg-red-100 hover:text-red-700 font-medium text-red-600"
          >Logout</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow pb-5">
      <div class="max-w-5xl mx-auto p-3 mt-3 bg-white rounded-lg shadow pb-10">
        <div class="flex justify-between items-center mb-3">
          <h1 class="text-2xl font-bold">Order Details</h1>
          <a href="/order" class="text-indigo-600 hover:underline"
            >&larr; Back to Orders</a
          >
        </div>

        <!-- Order Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-2">
          <div>
            <h2 class="font-semibold text-gray-700 mb-2">Order Info</h2>
            <p><strong>Order ID:</strong> #1001</p>
            <p><strong>Date:</strong> August 6, 2025</p>
            <p>
              <strong>Status:</strong>
              <span
                class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full"
                >Pending</span
              >
            </p>
          </div>

          <div>
            <h2 class="font-semibold text-gray-700 mb-2">Customer Info</h2>
            <p><strong>Name:</strong> John Doe</p>
            <p><strong>Email:</strong> john@example.com</p>
            <p><strong>Phone:</strong> +880123456789</p>
            <p><strong>Address:</strong> 123 Main Street, Dhaka, Bangladesh</p>
          </div>
        </div>

        <!-- Order Status Update Form -->
        <form action="#" method="POST" class="mb-10">
          <label for="status" class="block font-medium text-gray-700 mb-1"
            >Change Order Status</label
          >
          <select
            name="status"
            id="status"
            class="w-full max-w-xs border border-gray-300 rounded-md px-4 py-2"
          >
            <option value="Pending" selected>Pending</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
          </select>
          <button
            type="submit"
            class="mt-3 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md"
          >
            Update Status
          </button>
        </form>

        <!-- Products Table -->
        <h2 class="font-semibold text-gray-700 mb-4">Products</h2>
        <div class="overflow-x-auto">
          <table class="w-full text-left border">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th class="p-3">Product</th>
                <th class="p-3">Quantity</th>
                <th class="p-3">Unit Price</th>
                <th class="p-3">Total</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b hover:bg-gray-50">
                <td class="p-3">Wireless Headphones</td>
                <td class="p-3">2</td>
                <td class="p-3">$99.99</td>
                <td class="p-3">$199.98</td>
              </tr>
              <tr class="border-b hover:bg-gray-50">
                <td class="p-3">Bluetooth Speaker</td>
                <td class="p-3">1</td>
                <td class="p-3">$49.99</td>
                <td class="p-3">$49.99</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Summary -->
        <div class="flex justify-end">
          <div class="w-full max-w-sm bg-gray-50 p-4 rounded-lg">
            <div class="flex justify-between py-1 pr-[90px]">
              <span class="text-gray-600">Subtotal:</span>
              <span class="font-semibold">$249.97</span>
            </div>
            <div class="flex justify-between py-1 pr-[90px]">
              <span class="text-gray-600">Shipping:</span>
              <span class="font-semibold">$10.00</span>
            </div>
            <hr class="my-2" />
            <div class="flex justify-between text-lg font-bold pr-[90px]">
              <span>Total:</span>
              <span>$259.97</span>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
