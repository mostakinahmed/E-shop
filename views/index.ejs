<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>OneMart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .slider {
        transition: transform 0.7s ease-in-out;
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <!-- Navbar -->
    <nav class="bg-white shadow-md fixed w-full top-0 left-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <i class="fa-solid fa-store text-indigo-600 text-2xl"></i>
            <span class="font-bold text-xl text-gray-800">OneMart</span>
          </a>

          <!-- Middle: Search Bar -->
          <div class="flex-1 px-4">
            <div class="relative">
              <input
                type="text"
                placeholder="Search for products..."
                class="w-full rounded-full border border-gray-300 pl-4 pr-10 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
              <button
                class="absolute inset-y-0 right-0 px-3 text-gray-500 hover:text-indigo-600"
              >
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>

          <!-- Nav Links -->
          <div class="hidden md:flex items-center space-x-6">
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium"
              >Home</a
            >
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium"
              >Shop</a
            >
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium"
              >Deals</a
            >
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium"
              >Contact</a
            >

            <!-- Cart -->
            <a href="#" class="relative">
              <i class="fa-solid fa-cart-shopping text-gray-700 text-xl"></i>
              <span
                class="absolute -top-2 -right-2 bg-red-500 text-white text-xs px-1 rounded-full"
                >3</span
              >
            </a>

            <!-- User -->
            <a href="#">
              <i class="fa-solid fa-user text-gray-700 text-xl"></i>
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <div class="md:hidden">
            <button
              id="mobile-menu-btn"
              class="text-gray-700 text-2xl focus:outline-none"
            >
              <i class="fa-solid fa-bars"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
        <div class="px-4 pt-4 pb-2 space-y-3">
          <input
            type="text"
            placeholder="Search..."
            class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <a href="#" class="block text-gray-700 hover:text-indigo-600">Home</a>
          <a href="#" class="block text-gray-700 hover:text-indigo-600">Shop</a>
          <a href="#" class="block text-gray-700 hover:text-indigo-600"
            >Deals</a
          >
          <a href="#" class="block text-gray-700 hover:text-indigo-600"
            >Contact</a
          >
        </div>
      </div>
    </nav>

    <!-- JS for Mobile Menu -->
    <script>
      const btn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");

      btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    </script>

    <!-- Hero Slider -->
    <section class="relative w-full max-h-[600px] overflow-hidden">
      <div class="relative w-full h-[600px] overflow-hidden">
        <!-- Slider Wrapper -->
        <div id="slider" class="flex w-full h-full slider">
          <img
            src="https://i.ibb.co.com/ZRrHJ49Z/Beige-Modern-T-Shirt-Sale-Facebook-Cover-2.png"
            class="w-full object-cover"
            alt="Slide 1"
          />
          <img
            src="https://i.ibb.co.com/KccMNJ7R/Pastel-Colors-Shop-Fashion-Collections-Facebook-Cover-2.png"
            class="w-full object-cover"
            alt="Slide 2"
          />
          <img
            src="https://i.ibb.co.com/fG9TPzsP/Mainly-Blue-Summer-Collection-Facebook-Cover-2.png"
            class="w-full object-cover"
            alt="Slide 3"
          />
        </div>

        <!-- Navigation Dots -->
        <div
          class="absolute bottom-5 left-1/2 transform -translate-x-1/2 flex space-x-3"
        >
          <span
            class="dot w-3 h-3 bg-white rounded-full opacity-75 cursor-pointer"
          ></span>
          <span
            class="dot w-3 h-3 bg-white rounded-full opacity-50 cursor-pointer"
          ></span>
          <span
            class="dot w-3 h-3 bg-white rounded-full opacity-50 cursor-pointer"
          ></span>
        </div>
      </div>

      <script>
        const slider = document.getElementById("slider");
        const dots = document.querySelectorAll(".dot");
        let index = 0;

        function changeSlide() {
          index = (index + 1) % dots.length;
          slider.style.transform = `translateX(-${index * 100}%)`;
          dots.forEach((dot, i) => {
            dot.classList.toggle("opacity-75", i === index);
            dot.classList.toggle("opacity-50", i !== index);
          });
        }

        setInterval(changeSlide, 3000); // Auto-slide every 3s
      </script>
    </section>

    <!-- Featured Categories -->
    <section id="shop" class="max-w-7xl mx-auto p-6 mt-12">
      <h2 class="text-3xl font-bold mb-8 text-gray-900">Shop by Category</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-6 cursor-pointer text-center"
        >
          <img
            src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=400&q=80"
            alt="Electronics"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="text-xl font-semibold">Electronics</h3>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-6 cursor-pointer text-center"
        >
          <img
            src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?auto=format&fit=crop&w=400&q=80"
            alt="Clothing"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="text-xl font-semibold">Clothing</h3>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-6 cursor-pointer text-center"
        >
          <img
            src="https://images.unsplash.com/photo-1491553895911-0055eca6402d?auto=format&fit=crop&w=400&q=80"
            alt="Accessories"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="text-xl font-semibold">Accessories</h3>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-6 cursor-pointer text-center"
        >
          <img
            src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80"
            alt="Home Appliances"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="text-xl font-semibold">Home Appliances</h3>
        </div>
      </div>
    </section>

    <!-- Featured Products Preview -->
    <section class="max-w-7xl mx-auto p-6 mt-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900">Featured Products</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
        <!-- Example product cards -->
        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-4 cursor-pointer"
        >
          <img
            src="https://images.unsplash.com/photo-1512499617640-c2f9998f24e3?auto=format&fit=crop&w=400&q=80"
            alt="Smart Watch"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="font-semibold text-lg mb-2">Smart Watch</h3>
          <p class="text-indigo-600 font-bold">$199.99</p>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-4 cursor-pointer"
        >
          <img
            src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?auto=format&fit=crop&w=400&q=80"
            alt="Headphones"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="font-semibold text-lg mb-2">Wireless Headphones</h3>
          <p class="text-indigo-600 font-bold">$149.99</p>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-4 cursor-pointer"
        >
          <img
            src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=400&q=80"
            alt="Sneakers"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="font-semibold text-lg mb-2">Stylish Sneakers</h3>
          <p class="text-indigo-600 font-bold">$99.99</p>
        </div>

        <div
          class="bg-white rounded-lg shadow hover:shadow-lg transition p-4 cursor-pointer"
        >
          <img
            src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80"
            alt="Coffee Maker"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <h3 class="font-semibold text-lg mb-2">Coffee Maker</h3>
          <p class="text-indigo-600 font-bold">$79.99</p>
        </div>
      </div>
    </section>

    <!-- All Products Preview -->
    <section class="max-w-7xl mx-auto p-6 mt-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900">All Products</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
        <!-- Example product cards -->
        <% data.forEach(function(val) { %>
        <div
          class="w-64 h-80 bg-white rounded-none shadow-md overflow-hidden border hover:shadow-lg transition"
        >
          <div class="h-[230px] w-full">
            <img
              src="<%= val.imageUrl %>"
              alt="Product Image"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="flex flex-col justify-between items-center">
            <h3 class="text-lg font-semibold ml-1 text-gray-800 truncate">
              <%= val.productName %>
            </h3>
            <div class="text-lg font-bold text-indigo-600">
              Tk. <%= val.price%>
            </div>
            <button
              class="w-full inline-block mt-1 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold py-1 flex items-center justify-center space-x-2 transition rounded-none"
            >
              <i class="fas fa-shopping-cart"></i>
              <span>Buy Now</span>
            </button>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <footer class="bg-indigo-600 text-white text-center py-6 mt-20">
      <p>&copy; 2025 Your E-Commerce Shop. All rights reserved. @mostakin</p>
    </footer>

    <!-- Optional: Add simple slider JS for multiple slides -->
    <script>
      // Simple auto slider example (if you want to add multiple slides)
      // Code left minimal here for clarity; can expand on request.
    </script>
  </body>
</html>
