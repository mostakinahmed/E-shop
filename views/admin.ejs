<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <title>E-commerce Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg flex flex-col">
      <div class="p-6 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-indigo-600">E-Shop Admin</h1>
      </div>
      <nav class="flex flex-col p-4 space-y-3 flex-grow">
        <a
          href="/admin"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-semibold text-indigo-600 bg-indigo-50"
          >Dashboard</a
        >
        <a
          href="/product"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Products</a
        >
        <a
          href="/order"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Orders</a
        >
        <a
          href="customer"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Customers</a
        >
        <a
          href="report"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Reports</a
        >
        <a
          href="#"
          class="mt-auto py-2 px-4 rounded-lg hover:bg-red-100 hover:text-red-700 font-medium text-red-600"
          >Logout</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow p-8">
      <header class="mb-8 flex justify-between items-center">
        <div class="flex items-center space-x-3 text-green-500 animate-pulse">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-10 w-10"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 12l2-2m0 0l7-7 7 7m-9 9v-8h4v8m-6 0h8"
            />
          </svg>
          <h1 class="text-4xl font-semibold">Dashboard</h1>
        </div>

        <button
          type="button"
          onclick="location.href='/addnew'"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
          Add New Product
        </button>
      </header>

      <!-- Stats Cards -->
      <section class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-600 mb-2">Total Sales</h3>
          <p class="text-3xl font-bold text-indigo-600">$124,560</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-600 mb-2">Orders</h3>
          <p class="text-3xl font-bold text-indigo-600">1,230</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-600 mb-2">Products</h3>
          <p class="text-3xl font-bold text-indigo-600">320</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-600 mb-2">Customers</h3>
          <p class="text-3xl font-bold text-indigo-600">890</p>
        </div>
      </section>

      <!-- Recent Orders Table -->
      <section>
        <h3 class="text-2xl font-semibold mb-4 text-gray-800">Recent Orders</h3>
        <div class="overflow-x-auto bg-white rounded-lg shadow">
          <table class="min-w-full table-auto">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Order ID
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Customer
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Date</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Total</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4">#1001</td>
                <td class="px-6 py-4">Alice Johnson</td>
                <td class="px-6 py-4">2025-08-05</td>
                <td class="px-6 py-4">
                  <span
                    class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full"
                    >Completed</span
                  >
                </td>
                <td class="px-6 py-4 font-semibold">$250.00</td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">View</button>
                </td>
              </tr>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4">#1002</td>
                <td class="px-6 py-4">Bob Smith</td>
                <td class="px-6 py-4">2025-08-04</td>
                <td class="px-6 py-4">
                  <span
                    class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full"
                    >Pending</span
                  >
                </td>
                <td class="px-6 py-4 font-semibold">$180.00</td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">View</button>
                </td>
              </tr>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4">#1003</td>
                <td class="px-6 py-4">Charlie Lee</td>
                <td class="px-6 py-4">2025-08-03</td>
                <td class="px-6 py-4">
                  <span
                    class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full"
                    >Cancelled</span
                  >
                </td>
                <td class="px-6 py-4 font-semibold">$120.00</td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">View</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </body>
</html>
