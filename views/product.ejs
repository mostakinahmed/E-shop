<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <title>E-commerce Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg flex flex-col">
      <div class="p-6 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-indigo-600">E-Shop Admin</h1>
      </div>
      <nav class="flex flex-col p-4 space-y-3 flex-grow">
        <a
          href="/admin"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-semibold text-indigo-600"
          >Dashboard</a
        >
        <a
          href="/product"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700 bg-indigo-50"
          >Products</a
        >
        <a
          href="/order"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Orders</a
        >
        <a
          href="customer"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Customers</a
        >
        <a
          href="report"
          class="py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
          >Reports</a
        >
        <a
          href="#"
          class="mt-auto py-2 px-4 rounded-lg hover:bg-red-100 hover:text-red-700 font-medium text-red-600"
          >Logout</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow p-8">
      <header class="mb-8 flex justify-between items-center">
        <h2 class="text-3xl font-bold text-gray-800">Product List</h2>
        <button
          type="button"
          onclick="location.href='/addnew'"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
          Add New Product
        </button>
      </header>
      <section class="mt-8">
        <div class="overflow-x-auto bg-white rounded-lg shadow">
          <table class="min-w-full table-auto">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Product ID
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Image</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Price</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Stock</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(val) { %>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4"><%= val.productId %></td>
                <td class="px-6 py-4">
                  <img
                    src="<%= val.imageUrl %>"
                    alt="<%= val.productName %>"
                    class="w-12 h-12 rounded"
                  />
                </td>
                <td class="px-6 py-4"><%= val.productName %></td>
                <td class="px-6 py-4"><%= val.category %></td>
                <td class="px-6 py-4 font-semibold">$<%= val.price %></td>
                <td class="px-6 py-4"><%= val.stock %></td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">Edit</button>
                  <button class="text-red-600 pl-2 hover:underline">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %>

              <!-- <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-6 py-4">P001</td>
                <td class="px-6 py-4">
                  <img
                    src="https://i.ibb.co.com/8DYnK82B/mostakin.jpg"
                    alt="Wireless Headphones"
                    class="w-12 h-12 rounded"
                  />
                </td>
                <td class="px-6 py-4">Wireless Headphones</td>
                <td class="px-6 py-4">Electronics</td>
                <td class="px-6 py-4 font-semibold">$99.99</td>
                <td class="px-6 py-4">120</td>
                <td class="px-6 py-4">
                  <button class="text-indigo-600 hover:underline">Edit</button>
                  <button class="text-red-600 pl-2 hover:underline">
                    Delete
                  </button>
                </td>
              </tr> -->
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </body>
</html>
