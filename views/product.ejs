<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <title>Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Hamburger toggle for sidebar (mobile only) -->
    <button
      id="sidebarToggle"
      class="fixed top-4 left-4 z-50 md:hidden text-indigo-600 text-2xl focus:outline-none"
      aria-label="Toggle sidebar"
    >
      <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <aside
      id="sidebar"
      class="fixed md:relative top-0 left-0 h-screen z-40 w-56 sm:w-64 bg-white shadow-lg flex-col pb-5 transform md:translate-x-0 -translate-x-full transition-transform duration-200 ease-in-out md:flex"
    >
      <div class="p-6 border-b border-gray-200 md:ml-5">
        <h1 class="text-lg sm:text-2xl font-bold text-indigo-600">
          üõçÔ∏è OneMart
        </h1>
      </div>
      <nav class="flex flex-col p-4 space-y-3 flex-grow">
        <a
          href="/admin"
          class="flex items-center gap-2 py-2 px-4 rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-semibold text-gray-700"
        >
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 12l2-2m0 0l7-7 7 7m-7-7v18"
            />
          </svg>
          Dashboard
        </a>
        <a
          href="/product"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700 bg-indigo-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-4 text-indigo-600 mr-2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375C2.754 4.75 2.25 5.254 2.25 5.875v1.5c0 .621.504 1.125 1.125 1.125z"
            />
          </svg>
          Products
        </a>
        <a
          href="#"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
        >
          <i class="fas fa-tags text-indigo-600 w-5 mr-2"></i> Category
        </a>
        <a
          href="/order"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
        >
          <i class="fas fa-shopping-cart text-indigo-600 w-5 mr-2"></i> Orders
        </a>
        <a
          href="#"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
        >
          <i class="fas fa-chart-line text-indigo-600 w-5 mr-2"></i> Sales
        </a>
        <a
          href="#"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
        >
          <i class="fas fa-users text-indigo-600 w-5 mr-2"></i> Customers
        </a>
        <a
          href="#"
          class="py-2 px-4 flex items-center rounded-lg hover:bg-indigo-100 hover:text-indigo-700 font-medium text-gray-700"
        >
          <i class="fas fa-user-shield text-indigo-600 w-5 mr-2"></i> Admin Zone
        </a>
      </nav>
      <a
        href="#"
        class="mt-auto py-2 px-4 mx-4 rounded-lg hover:bg-red-100 hover:text-red-700 font-medium text-red-600 text-center"
      >
        Logout
      </a>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow p-4 sm:p-8">
      <header class="mb-8 flex justify-between items-center flex-wrap gap-6">
        <!-- Stats Grid Container -->
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 w-full"
        >
          <!-- Total Products -->
          <a href="/allproduct">
            <div class="bg-white p-5 rounded-lg shadow flex items-center gap-5">
              <i class="fa-solid fa-box text-indigo-600 text-2xl"></i>
              <div>
                <div class="text-sm sm:text-base text-gray-500 pb-1">
                  Total Products
                </div>
                <div class="text-xl sm:text-2xl font-bold text-indigo-700">
                  <%= countTotalProducts %>
                </div>
              </div>
            </div>
          </a>

          <!-- Out of Stock -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">Out of Stock</div>
            <div class="text-2xl sm:text-3xl font-bold text-red-600">
              <%= countOutOfStockProducts %>
            </div>
          </div>

          <!-- Low Inventory -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">
              Low Stock Items
            </div>
            <div class="text-2xl sm:text-3xl font-bold text-yellow-500">
              <%= countLowStockProducts %>
            </div>
          </div>

          <!-- Categories -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">Categories</div>
            <div class="text-2xl sm:text-3xl font-bold text-green-600">9</div>
          </div>

          <!-- Top Seller -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">Top Seller</div>
            <div class="text-lg sm:text-xl font-semibold text-gray-700">
              Smart Watch Pro
            </div>
            <div class="text-sm sm:text-base text-green-600">
              1,230 Units Sold
            </div>
          </div>

          <!-- Inventory Value -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">
              Inventory Value
            </div>
            <div class="text-2xl sm:text-3xl font-bold text-indigo-600">
              $58,900
            </div>
          </div>

          <!-- New Products This Month -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">
              New Products (Aug)
            </div>
            <div class="text-2xl sm:text-3xl font-bold text-blue-600">17</div>
          </div>

          <!-- Top Rated Product -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm sm:text-base text-gray-500">Top Rated</div>
            <div class="text-lg sm:text-xl font-semibold text-gray-700">
              Smart Speaker
            </div>
            <div class="text-sm sm:text-base text-yellow-500">
              ‚òÖ 4.9 (150 Reviews)
            </div>
          </div>

          <!-- Add Product Button -->
          <div
            class="bg-white shadow-md rounded-xl p-6 flex items-center justify-between space-x-3 border border-1 border-indigo-600"
          >
            <!-- Icon -->
            <div class="bg-indigo-100 text-indigo-600 p-4 rounded-full">
              <i class="fa-solid fa-box-open fa-lg"></i>
            </div>

            <!-- Button -->
            <a
              href="/addnew"
              class="bg-indigo-600 text-white px-3 py-2 rounded-lg hover:bg-indigo-700 transition"
            >
              + Add New Product
            </a>
          </div>
        </div>
      </header>
      <section class="mt-8">
        <div class="overflow-x-auto bg-white rounded-lg shadow">
          <table class="min-w-full table-auto">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Product ID
                </th>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Image
                </th>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Name
                </th>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Category
                </th>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Price
                </th>
                <th
                  class="px-3 py-2 text-left text-xs sm:text-sm font-semibold"
                >
                  Stock
                </th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function (val) { %>
              <tr class="border-b hover:bg-indigo-50 cursor-pointer">
                <td class="px-3 py-2 text-sm sm:text-base">
                  <%= val.productId %>
                </td>
                <td class="px-3 py-2">
                  <img
                    src="<%= val.imageUrl %>"
                    alt="<%= val.productName %>"
                    class="w-12 h-12 rounded"
                  />
                </td>
                <td class="px-3 py-2 text-sm sm:text-base">
                  <%= val.productName %>
                </td>
                <td class="px-3 py-2 text-sm sm:text-base">
                  <%= val.category %>
                </td>
                <td class="px-3 py-2 text-sm sm:text-base font-semibold">
                  $<%= val.price %>
                </td>
                <td class="px-3 py-2 text-sm sm:text-base"><%= val.stock %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>
    </main>

    <!-- Toast -->
    <div
      id="successToast"
      class="hidden fixed top-5 right-5 bg-green-500 text-white px-6 py-3 rounded shadow-lg z-50"
    >
      ‚úÖ Product added successfully!
    </div>

    <script>
      const params = new URLSearchParams(window.location.search);
      if (params.get("success") === "1") {
        const toast = document.getElementById("successToast");
        toast.classList.remove("hidden");

        setTimeout(() => {
          toast.classList.add("hidden");
          // Optional: remove the ?success=1 from the URL without reloading
          const newUrl = new URL(window.location);
          newUrl.searchParams.delete("success");
          window.history.replaceState({}, "", newUrl);
        }, 3000);
      }

      // Sidebar toggle script
      const sidebar = document.getElementById("sidebar");
      const toggleBtn = document.getElementById("sidebarToggle");

      toggleBtn.addEventListener("click", () => {
        sidebar.classList.toggle("-translate-x-full");
      });
    </script>
  </body>
</html>
