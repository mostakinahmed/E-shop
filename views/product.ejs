    <!-- Main Content -->
    <main class="flex-grow p-8">
      <header class="mb-8 flex justify-between items-center">
        <!-- Stats Grid Container -->
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4"
        >
          <!-- Total Products -->
          <a href="/allproduct">
            <div class="bg-white p-5 rounded-lg shadow flex items-center gap-5">
              <i class="fa-solid fa-box text-indigo-600 text-2xl"></i>
              <div>
                <div class="text-sm text-gray-500 pb-1">Total Products</div>
                <div class="text-xl font-bold text-indigo-700">
                  <%= countTotalProducts%>
                </div>
              </div>
            </div>
          </a>

          <!-- Out of Stock -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Out of Stock</div>
            <div class="text-2xl font-bold text-red-600">
              <%=countOutOfStockProducts%>
            </div>
          </div>

          <!-- Low Inventory -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Low Stock Items</div>
            <div class="text-2xl font-bold text-yellow-500">
              <%=countLowStockProducts%>
            </div>
          </div>

          <!-- Categories -->
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="text-sm text-gray-500">Categories</div>
            <div class="text-2xl font-bold text-green-600">9</div>
